<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qs.bluewhale.service.mapper.UserMapper">

    <!--
        定义实体属性和数据库字段之间映射对应关系
        jdbcType属性：org.apache.ibatis.type.JdbcType类中定义的枚举，需要大写
    -->
    <resultMap id="BaseResultMap" type="com.qs.bluewhale.entity.User">
        <id column="user_id" property="userId" jdbcType="VARCHAR"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="create_by" property="createBy" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="DATE"/>
        <result column="last_modify_by" property="lastModifyBy" jdbcType="VARCHAR"/>
        <result column="last_modify_time" property="lastModifyTime" jdbcType="DATE"/>
    </resultMap>

    <sql id="Base_Column_List">
        user_id, user_name, password, create_by, create_time, last_modify_by, last_modify_time
    </sql>


    <insert id="insert">
        INSERT INTO t_bw_user(
        <include refid="Base_Column_List"/>
        )
        VALUES(#{userId}, #{userName}, #{password}, #{createBy}, #{createTime}, #{lastModifyBy}, #{lastModifyTime})
    </insert>

    <update id="delete" parameterType="String">
        DELETE FROM t_bw_user
        WHERE user_id = #{userId}
    </update>

    <select id="getCourseByCourseId" parameterType="String" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_bw_user WHERE user_id=#{userId}
    </select>
</mapper>